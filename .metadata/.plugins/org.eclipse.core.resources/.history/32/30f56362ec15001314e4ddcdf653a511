	<form name="form1">

		<input type="button" id="loadAll" value="load all xml" /> 
		 <input type="button" id="reset" value="reset" />

	</form>
	<div id="disp"></div>

<table border="1" style="display:none">
  <tr id="tableheader">
    <th>id</th>
    <th>realname</th>
    <th>username</th>
  </tr>
</table>

