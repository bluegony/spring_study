
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">


<title>load json</title>
</head>
<body>

	<form name="form1">

		<input type="button" id="loadAll" value="load json" /> 
		 <input type="button" id="reset" value="reset" />

	</form>
	<div id="disp"></div>

<table border="1" style="display:none">
  <tr id="tableheader">
    <th>name</th>
    <th>age</th>
    <th>hobby</th>
  </tr>
</table>

</body>

<style type="text/css">
<!--
img {
	max-width: 80%;
	max-height: 80%;
}
-->
</style>
<script type="text/javascript"
	src="http://code.jquery.com/jquery-1.6.4.min.js"></script>
<script type="text/javascript">
$(function() {
	$('#loadAll').click(function() {
		//alert(3);
		
		$.ajax({
			url:'json.txt',
			dataType:'json',
			success:function (json){
				//alert(2);
				showResult(json);
				//alert(json);
			}
		})

	})
	
	$('#reset').click(function() {
		$('table').hide();
		$('tr').not('#tableheader').remove();
	})
	
});

function showResult(json){
	alert(1)
	for(i in json.members ){
		p = "<tr><td>" +i.name + "</td><td>"+i.age+"</td><td>"+i.hobby+"</td></tr>";
		$(p).appendTo('table');
		
	})
	}


	

</script>