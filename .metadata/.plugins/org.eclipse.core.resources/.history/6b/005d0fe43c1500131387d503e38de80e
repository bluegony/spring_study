	var numOfPhoto = 3; //사진 매수	
	var currentPhoto = 1; //현재 사진 번호	

	$(function() {
		// 이미지 프리로드
		for ( var i = 1; i <= numOfPhoto; i++) {
			$("<img>").attr("src", "slides/img" + i + ".jpg");
		}

		// 최초의 이미지 표시
		$("#display img").attr("src", "slides/img1.jpg");

		// 다음 이미지 표시
		$("#nextBtn").click(function() {
			if (currentPhoto < numOfPhoto) {
				currentPhoto++;
			} else {
				currentPhoto = 1;
			}
			showImage(currentPhoto);
		});

		// 이전 이미지 표시
		$("#prevBtn").click(function() {
			if (currentPhoto == 1) {
				currentPhoto = numOfPhoto;
			} else {
				currentPhoto--;
			}
			showImage(currentPhoto);
		});
		

		$("#slideShow").click(function() {
			setTimeout(function() {
				if (currentPhoto < numOfPhoto) {
					currentPhoto++;
				} else {
					currentPhoto = 1;
				}
				showImage(currentPhoto);
			},1000);

		});

	});

	
	// 지정한 번호의 이미지 표시
	function showImage(photoNumber) {
		newSlideSrc = "slides/img" + photoNumber + ".jpg"
		// 슬라이드 표시
		$("#display img").attr("src", newSlideSrc);
	}
